<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:mx="library://ns.adobe.com/flex/mx"
			  buttonMode="true" useHandCursor="true"
			 minWidth="120" minHeight="30" alpha.disabled="0.5">
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	<s:states>		
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	<s:Rect width="100%" height="100%"
			 radiusX="15" radiusY="15" 
			>
		 
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0x60A0FF"  alpha="1" />
				<!--<s:GradientEntry color="0x4885E3"  alpha="1" />		-->		
				<s:GradientEntry color="0x366ECB"  alpha="1" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:Label id="labelDisplay" width="100%" height="100%" 
			 textAlign="center" verticalAlign="middle" fontSize="14" 
			 color="0xFFFFFF" buttonMode="true" useHandCursor="true"
			 />
</s:SparkSkin>